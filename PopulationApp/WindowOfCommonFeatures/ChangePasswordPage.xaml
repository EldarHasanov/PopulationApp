        <TextBox HorizontalAlignment="Left" Margin="350,320,0,0" Text="New Password" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" FontSize="20" Name="NewPass" />
        <Button Content="Зареєструвати" HorizontalAlignment="Left" Margin="350,360,0,0" VerticalAlignment="Top" FontSize="20" Width="400" IsDefault="True" Click="SingUpButton_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="100,75,0,0" Text="Population App" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Name="AAA" Width="600" FontSize="35"/>
